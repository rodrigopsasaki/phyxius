{
  "name": "@phyxius/process",
  "version": "0.0.0",
  "type": "module",
  "description": "Single-threaded, message-driven process with deterministic time and supervision",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "size": "size-limit"
  },
  "dependencies": {
    "@phyxius/clock": "workspace:*"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.7",
    "@vitest/coverage-v8": "^2.1.8",
    "size-limit": "^11.1.7",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "12 KB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Rodrigo Sasaki",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigopsasaki/phyxius.git",
    "directory": "packages/process"
  },
  "keywords": [
    "process",
    "actor",
    "message-driven",
    "supervision",
    "deterministic",
    "backpressure"
  ],
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/rodrigopsasaki/phyxius/issues"
  },
  "homepage": "https://github.com/rodrigopsasaki/phyxius#readme"
}
